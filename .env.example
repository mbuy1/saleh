# Firebase Configuration (Optional)
# Get these from Firebase Console > Project Settings
# FIREBASE_API_KEY=your_firebase_api_key_here
# FIREBASE_APP_ID=your_firebase_app_id_here
# FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
# FIREBASE_PROJECT_ID=your_project_id_here

# Supabase Configuration (Required)
# Get these from Supabase Dashboard > Project Settings > API
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Cloudflare Images Configuration (Required for image uploads)
# Get these from Cloudflare Dashboard > Images
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_IMAGES_TOKEN=your_cloudflare_images_api_token_here

# Cloudflare Images Base URL
# Format: https://imagedelivery.net/YOUR_ACCOUNT_HASH/
# Get YOUR_ACCOUNT_HASH from Cloudflare Images Dashboard
CLOUDFLARE_IMAGES_BASE_URL=https://imagedelivery.net/your_account_hash_here/
